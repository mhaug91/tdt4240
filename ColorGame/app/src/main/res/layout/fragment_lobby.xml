<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="progark.gruppe13.colorgame.Start_menu">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joinGame"
        android:text="JOIN!"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="Players in lobby:"
              android:id="@+id/playersInLobbyText"
    android:layout_below="@id/joinGame"/>

    <ListView
            android:id="@+id/userListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_below="@id/playersInLobbyText" android:paddingTop="50dp" android:smoothScrollbar="true">

    </ListView>

</RelativeLayout>
